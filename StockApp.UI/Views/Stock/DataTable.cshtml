@{
    ViewData["Title"] = "Stok Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Stok Listesi</h3>
                            <div class="card-tools">
                                <div class="input-group input-group-sm">
                                    @*<button type="button" class="btn btn-default bg-gradient-primary" data-toggle="modal" data-target="#modalAdd">
                                        + Stok Ekle
                                    </button>*@
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ürün Kodu</th>
                                        <th>Adı</th>
                                        <th>Stok Sayısı</th>
                                        <th>Kritik Stok</th>
                                        <th>Durumu</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

<script>
$(document).ready(function () {
    $("#customerDatatable").DataTable({
        "processing": true,
        "serverSide": true,
        "filter": true,
        "ajax": {
            "url": "/Stock/DataTableJson",
            "type": "POST",
            "datatype": "json"
        },
        "columnDefs": [{
            "targets": [0],
            "visible": true,
            "searchable": false
        }],
        "columns": [
                    { "data": "id", "name": "ID", "autoWidth": true },
                    { "data": "unitCode", "name": "Ürün Kodu", "autoWidth": true },
                    { "data": "name", "name": "Adı", "autoWidth": true },
                    { "data": "quantity", "name": "Stok Sayısı", "autoWidth": true },
                    { "data": "criticQantity", "name": "Kritik Stok", "autoWidth": true },
                    { "data": "status", "name": "Durumu", "autoWidth": true },
                    {
                        "render": function (data, row) { return "<a href='#' class='btn btn-danger' onclick=DeleteCustomer('" + row.id + "'); >Delete</a>"; }
                    },
        ]
    });
});
</script>
}